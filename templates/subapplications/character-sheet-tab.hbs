<div class="tab babonus {{isActive}}" data-group="primary" data-tab="babonus">
  <h1 class="otters">
    <i class="{{{ICON}}} mirror" data-action="otter-rainbow"></i>
    <span class="name-stacked">
      <span class="title">{{localize "BABONUS.ModuleTitle"}}</span>
      <span class="subtitle">{{parentName}}</span>
    </span>
    <i class="{{{ICON}}}" data-action="otter-dance"></i>
  </h1>

  <dnd5e-effects v2>
    <item-list-controls for="babonus" label="{{localize 'BABONUS.SearchBonuses'}}" sort="toggle" group group-label="Group by Type" collection="babonus"></item-list-controls>

    <section class="items-list babonus-list" data-item-list="babonus">

      {{#each sections as |section|}}
      <div class="items-section card" data-type="{{section.key}}">

        <div class="items-header header">
          <h3 class="item-name">{{localize section.label}}</h3>
          <div class="item-header bonus-source">{{localize "DND5E.Source"}}</div>
          <div class="item-header item-controls"></div>
        </div>

        <ol class="item-list unlist">
          {{#each bonuses}}
          <li class="item" data-item-uuid="{{bonus.uuid}}" data-item-id="{{bonus.id}}" data-entry-id="{{bonus.id}}" data-parent-id="{{bonus.parent.id}}" data-item-name="{{bonus.name}}" data-item-sort="{{bonus.sort}}" data-grouped="{{bonus.type}}" data-ungrouped="all" {{#unless isEmbedded}}draggable="true"{{/unless}}>
            <div class="item-name item-action item-tooltip rollable" role="button" data-action="edit" aria-label="{{bonus.name}}" data-tooltip="{{tooltip}}" data-tooltip-class="dnd5e2 dnd5e-tooltip item-tooltip" data-tooltip-direction="LEFT">
              <img class="item-image gold-icon" src="{{bonus.img}}" alt="{{bonus.name}}">
              <div class="name name-stacked">
                {{#if isEmbedded}}
                <span class="title">[{{parentName}}] {{bonus.name}}</span>
                {{else}}
                <span class="title">{{bonus.name}}</span>
                {{/if}}
                <span class="subtitle">{{{labels}}}</span>
              </div>
            </div>
            <div class="item-detail bonus-source {{#unless isEmbedded}}empty{{/unless}}">
              {{#if isEmbedded}}
              <a data-action="bonus-source" data-uuid="{{bonus.parent.uuid}}">{{bonus.parent.name}}</a>
              {{/if}}
            </div>
            <div class="item-detail item-controls">
              <a class="item-control" data-action="toggle">
                <i class="fa-solid fa-toggle-{{ifThen bonus.enabled 'on' 'off'}}"></i>
              </a>
              {{#if @root.isEdit}}
              <a class="item-control" data-action="delete">
                <i class="fa-solid fa-trash"></i>
              </a>
              {{/if}}
            </div>
          </li>
          {{/each}}
        </ol>

      </div>
      {{/each}}

    </section>

  </dnd5e-effects v2>
</div>
